<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/backgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#FF0000">
        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Homepage"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/app_inbox_id"
            style="@style/CardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_baseline_notifications_none_24"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:layout_gravity="center"
            android:background="#A30C0C"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/ctNativeDisplayEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Native Display Event"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/nativeDisplayResult"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Native Display Results: "
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/productConfigResult"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Product Config Results: "
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/productConfigABResult"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Product Config AB Test Results: "
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"/>

        <Button
            android:id="@+id/goToWebPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Webview Page"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/ct_custom_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raise a Custom Event"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/ct_Movie_Watched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CT Movie Watched event"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/id_app_inbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App inbox Event"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/nativeDisplay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Native Display 2"
            android:layout_marginTop="5dp"/>



    </LinearLayout>

</LinearLayout>